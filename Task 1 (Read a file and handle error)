try:
    file1=open('sample.txt','r')
    reading_file=file1.readlines()
    s=len(reading_file)
    for i in range(s):
        print(f"Line{i}: ",reading_file[i])
except FileNotFoundError:
    print("Error: The file sample.txt was not found.")
except Exception as e:
    print(f"An error occurred: {e}")
    
file1.close()
